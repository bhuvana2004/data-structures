#include<stdio.h>
#include<conio.h>
int Q[6],f=-1,r=-1;
int isFull()
{
    if(r==5) return 1;
    else return 0;
}
int isEmpty()
{
    if(f==-1||f>r) return 1;
    else return 0;
}
void insertQ()
{
    int data;
       if(isFull());
         {
           printf("\n Linear Queue is full");
             
         }
        printf("\n enter data:");
        scanf("%d",&data);
        r++;
        if(f==-1) f++;
        Q[r]=data;
        printf("\n data inserted in the queue");
    
}
int deleteQ()
{
    int t;
    if(isEmpty())
    {
        printf("\n queue id empty");
    }
     printf("\n delete element from the queue  is" );
     t=Q[f];
     f++;
     return t;
    
}
void displayQ()
{
    int i;
    
        for(i=f;i<=r;i++)
        {
            printf("%d\t",Q[i]);
        }
    
}
int menu()
{
    int ch;
    printf("Queue operations used in arrays..");
    printf("\n------------------------------\n");
    printf("\n1.insert");
    printf("\n2.delete");
    printf("\n3.display");
    printf("\n4.quit");
    printf("\nenter choice:");
    scanf("%d",&ch);
    return ch;
}
void main()
{
    int ch;
    do
    {
        ch=menu();
        switch(ch)
        {
            case 1:insertQ();
                   break;
            case 2:deleteQ();
                   break;
            case 3:displayQ();
                   break;
            case 4: 
                    return;
        }
        getch();
    }while(1);
}

